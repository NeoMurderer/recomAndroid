<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:weightSum="1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/playerLayout">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:weightSum="1"
        android:baselineAligned="false"
        android:background="?attr/colorPrimary"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/playerHead">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Buckethead â€“ Soothsayer"
            android:id="@+id/playerCurrent"
            android:autoText="true"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="16dp" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/closePlayer"
            android:src="@drawable/ic_close_white"
            android:background="#00000000"
            android:padding="6dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|right"
            android:visibility="invisible" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/playerPlayHead"
            android:src="@drawable/ic_play_arrow_black"
            android:background="#00000000"
            android:padding="6dp"
            android:layout_gravity="center_vertical|right" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="?attr/colorPrimary"
        android:id="@+id/linearLayout">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/playerPrev"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_fast_rewind_white"
            android:background="#00000000"
            android:layout_weight="1"
            android:padding="6dp"
            android:clickable="false" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/playerPlay"
            android:src="@drawable/ic_play_arrow_black"
            android:background="#00000000"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="6dp"
            android:clickable="false" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/playerPause"
            android:src="@drawable/ic_pause_white"
            android:background="#00000000"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="6dp"
            android:clickable="false" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/playerNext"
            android:src="@drawable/ic_fast_forward_white"
            android:background="#00000000"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="6dp"
            android:clickable="false" />
    </LinearLayout>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/volumeBar"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
